# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# PostgreSQL connection string format
# postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/EMICalculator
VITE_DATABASE_NAME=EMICalculator

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
VITE_APP_NAME=Universal EMI Calculator
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://your-domain.com
VITE_ENVIRONMENT=production

# =====================================================
# FEATURE FLAGS
# =====================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ADMIN_DASHBOARD=true
VITE_ENABLE_PART_PAYMENT=true

# =====================================================
# GOOGLE ANALYTICS (Optional)
# =====================================================
# Get your ID from Google Analytics
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# =====================================================
# NETLIFY CONFIGURATION
# =====================================================
# Get these from your Netlify site settings
NETLIFY_AUTH_TOKEN=your-netlify-token
NETLIFY_SITE_ID=your-site-id

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password

# =====================================================
# API KEYS
# =====================================================
VITE_API_KEY=your-api-key-here
VITE_API_SECRET=your-api-secret-here

# =====================================================
# DEVELOPMENT CONFIGURATION
# =====================================================
VITE_DEV_PORT=5173
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG=false
